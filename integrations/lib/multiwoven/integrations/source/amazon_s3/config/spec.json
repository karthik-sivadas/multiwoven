{
  "documentation_url": "https://docs.multiwoven.com/integrations/sources/amazons3",
  "stream_type": "dynamic",
  "connector_query_type": "raw_sql",
  "connection_specification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "AmazonS3",
    "type": "object",
    "if": {
      "properties": {
        "auth_type": {
          "enum": ["user"]
        }
      }
    },
    "then": {
      "required": [
        "auth_type",
        "region",
        "bucket",
        "access_id",
        "secret_access",
        "file_type"
      ]
    },
    "else": {
      "required": [
        "auth_type",
        "region",
        "bucket",
        "arn",
        "file_type"
      ]
    },
    "properties": {
      "auth_type": {
        "title": "Authentication type",
        "type": "string",
        "default": "user",
        "description": "Authenticate either by using an IAM User (Access Key ID & Secret Access Key) or an IAM Role (ARN)",
        "enum": [
          "user",
          "role"
        ],
        "enumNames": [
          "IAM User",
          "IAM Role"
        ],
        "order": 0
      },
      "arn": {
        "type": "string",
        "title": "IAM Role ARN",
        "order": 1
      },
      "access_id": {
        "type": "string",
        "title": "Access Id",
        "order": 2
      },
      "secret_access": {
        "type": "string",
        "title": "Secret Access",
        "multiwoven_secret": true,
        "order": 3
      },
      "region": {
        "description": "AWS region",
        "examples": [
          "us-east-2"
        ],
        "type": "string",
        "title": "Region",
        "order": 4
      },
      "bucket": {
        "description": "Bucket Name",
        "type": "string",
        "title": "Bucket",
        "order": 5
      },
      "path": {
        "description": "Path to csv or parquet files",
        "examples": [
          "/path/to/files"
        ],
        "type": "string",
        "title": "Path",
        "order": 6
      },
      "file_type": {
        "description": "The type of file to read",
        "type": "string",
        "title": "File Type",
        "enum": [
          "csv",
          "parquet"
        ],
        "order": 7
      }
    }
  }
}